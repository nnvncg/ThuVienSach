@using QuanLyThuVien2.Models
@model TaiKhoan
@{
    ViewBag.Title = "Quản lý thông tin tài khoản";
    ViewBag.Description = "Trang quản lý thông tin tài khoản của khách hàng.";
    Layout = "~/Views/Layout/_LayoutCustormer2.cshtml";
}

<div class="col-sm-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            Quản lý tài khoản
        </div>
        <div class="card-body">
            <a class="dropdown-item active rounded text-white">Thông tin tài khoản</a>
            <a class="dropdown-item rounded" href="/Sach/SachDanhDau">Sách đã đánh dấu</a>
            <a class="dropdown-item rounded" href="/Sach/SachDaMuon">Sách đã mượn</a>
        </div>
    </div>
</div>
<div class="col-sm-8">
    <div class="card">
        <div class="card-header bg-success text-white">
            Thông tin chi tiết
        </div>
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <p>@Model.Email</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Họ và tên</label>
                <div class="col-sm-10">
                    <p>@Model.HoVaTen</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Số điện thoại</label>
                <div class="col-sm-10">
                    <p>@Model.SoDienThoai</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Địa chỉ</label>
                <div class="col-sm-10">
                    <p>@Model.DiaChi</p>
                </div>
            </div>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                Đổi mật khẩu
            </button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter2">
                Thay đổi thông tin
            </button>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Đổi mật khẩu</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="">Mật khẩu cũ</label>
                                    <input type="password" class="form-control" id="OldPassword" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label for="">Mật khẩu mới</label>
                                    <input type="password" class="form-control" id="NewPassword" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label for="">Xác nhận mật khẩu</label>
                                    <input type="password" class="form-control" id="NewPassword2" placeholder="Password">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal" id="saveNewPassword">Lưu thay đổi</button>
                        </div>
                    </div>
                </div>
            </div>
            @*sua thông tin*@
            <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Sửa thông tin</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="">Họ tên</label>
                                    <input type="text" class="form-control" id="txtFullName" placeholder="Họ và tên">
                                </div>
                                <div class="form-group">
                                    <label for="">Địa chỉ</label>
                                    <input type="text" class="form-control" id="txtAddress" placeholder="Địa chỉ của bạn">
                                </div>
                                <div class="form-group">
                                    <label for="">Số điện thoại</label>
                                    <input type="text" class="form-control" id="txtPhone" placeholder="Số điện thoại liên hệ">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal" id="ChangeInformation">Lưu thay đổi</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

